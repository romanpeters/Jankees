pipeline {
    agent any

    parameters {
        choice choices: $GROUPS, 
        name: 'Host'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code from version control
                checkout scm
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Set the path to your Ansible playbook and inventory file
                    def ansiblePlaybook = "apt-update/main.yml"
                    def ansibleInventory = "inventory.ini"

                    // Run the Ansible playbook using the 'ansible-playbook' command
                    sh "ansible-playbook -i ${ansibleInventory} ${ansiblePlaybook} --limit ${Host}"
                }
            }
        }
    }

    post {
        success {
            script {
                def msg = "Updated your servers"
                sh "curl -d '${msg}' ${NOTIFY_URL}"
                echo "${msg}"
            }
        }
        failure {
            script {
                def msg = "I failed to update your servers"
                sh "curl -d '${msg}' ${NOTIFY_URL}"
                echo "${msg}"
            }
        }
    }
}
